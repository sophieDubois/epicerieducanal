{# Utilisation du squelette "base.html.twig" #}
{% extends "base.html.twig" %}

{# Définition du titre de la page #}
{% block title%}Nouvelle publication{% endblock %}

{# Remplissage du body de la page #}
{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        {# cards de titre et présentation #}
        <div class="card col-12 col-lg-7 mx-auto my-5 p-3 ">
            <div class="card-header text-center ">
                {# changer l'icone du titre #}
                <h1 class="fs-4"><i class="fa-solid fa-plate-wheat me-3"></i>Nouvelle publication</h1>
            </div>
            <div class="card-body">
                <p class=" p-2 m-2 fs-5 text-center">xxxxxxxxxxxxxxxxxxxxx</p>
                <p class=" p-2 m-2 fs-5 text-center">xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</p>
                <p class=" p-2 m-2 fs-6 text-center">xxxxxxxxxxxxxxxxxxxxxxxxxxxxx</p>
            </div>
        </div>

        {# affichage formulaire #}
        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                {# affichageformulaire creation article #}
                {{ form(new_publication_form) }}

            </div>
        </div>

    </div>
{% endblock %}