{# Utilisation du squelette "base.html.twig" #}
{% extends "base.html.twig" %}

{# Définition du titre de la page #}
{% block title%}Modification d'une publication{% endblock %}

{# Remplissage du body de la page #}
{% block body %}

    {# Grille Bootstrap #}
    <div class="container-fluid">

        {# cards de titre et présentation #}
        <div class="card col-12 col-lg-7 mx-auto my-5 p-3 ">
            <div class="card-header text-center ">
                {# changer l'icone du titre #}
                <h1 class="fs-4"><i class="fa-solid fa-plate-wheat me-3"></i>Modification d'une publication</h1>
            </div>
            <div class="card-body">
                <p class=" p-2 m-2 fs-5 text-center">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Magni.</p>
                <p class=" p-2 m-2 fs-5 text-center">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque dolores explicabo laboriosam quibusdam, sunt vero. Aperiam eligendi illo pariatur quaerat quasi reiciendis?</p>
                <p class=" p-2 m-2 fs-6 text-center">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad cupiditate eum facilis iusto libero perferendis porro repellendus, unde voluptate voluptatem!</p>
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-center">
                {# lien pour revenir sur la fiche de l'article #}
                <a href="{{ path('blog_publication_view', {slug: edit_form.vars.value.slug}) }}" class="text-decoration-none">Revenir sur l'article</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-8 mx-auto">
                {{ form(edit_form) }}
            </div>
        </div>


    </div>
{% endblock %}
